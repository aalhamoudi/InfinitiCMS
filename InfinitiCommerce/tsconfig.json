{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "preserve",
    "jsxFactory": "h",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "noEmitHelpers": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "skipDefaultLibCheck": true,
    "lib": ["es6", "es2016", "dom"],
    "types": [
      "node",
      "vue-ts"
    ],
    "paths": {
      "@/*": [
        "*"
      ],
      "node": ["node_modules/@types/node/index.d.ts"]
      //"vue": ["node_modules/vue/types/index.d"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
