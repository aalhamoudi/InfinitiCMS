{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "preserve",
    "jsxFactory": "h",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "noEmitHelpers": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "skipDefaultLibCheck": true,
    "lib": ["es6", "es2016", "dom"],
    "types": [
      "node"
    ],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": [
    "packages",
    "node_modules"
  ]
}
